<Window
    x:Class="wpf_mvvm_relaycommand.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:wpf_mvvm_relaycommand"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions />

        <StackPanel
            Height="40"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="75"
                Margin="5,0,5,0"
                Content="Add" />
            <Button
                Width="75"
                Margin="5,0,5,0"
                Content="Delete" />
            <Button
                Width="75"
                Margin="5,0,0,0"
                Content="Save" />
        </StackPanel>

        <Grid />

    </Grid>
</Window>
